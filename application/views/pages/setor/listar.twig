{% extends "templates/base_listar.twig" %}
{% set titulo ="Entidades Externas " %}
{% block toolbar %}
    <p><a class="btn btn-primary" href="{{ base_url('index.php/setor/cadastrar') }}"><i class="fa fa-plus fa-fw"></i> Cadastrar </a></p>
{% endblock %}
{% block content %}
    <table width="100%" class="table table-striped table-bordered" id="dataTables-example">
        <thead>
            <tr>
                <th>ID</th>
                <th>Entidade</th>
            </tr>
        </thead>
        <tbody>
        {% for set in setor %}
            <tr>
                <td>{{ set.ID_SETOR }}</td>
                <td>{{ set.DESCRICAO }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}