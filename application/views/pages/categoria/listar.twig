{% extends "templates/base_listar.twig" %}
{% set titulo ="Categorias" %}
{% block toolbar %}
    <p><a class="btn btn-primary" href="{{ base_url('index.php/categoria/cadastrar') }}"><i class="fa fa-plus fa-fw"></i> Cadastrar </a></p>
{% endblock %}
{% block content %}
    <table width="100%" class="table table-striped table-bordered" id="dataTables-example">
        <thead>
            <tr>
                <th>ID</th>
                <th>Categoria</th>
            </tr>
        </thead>
        <tbody>
        {% for cat in categoria %}
            <tr>
                <td>{{ cat.ID_CATEGORIA }}</td>
                <td>{{ cat.DESCRICAO }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}