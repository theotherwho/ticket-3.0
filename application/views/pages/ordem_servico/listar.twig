{% extends "templates/base_listar.twig" %}
{% set titulo ="Tickets Externos:" %}
{% block toolbar %}
    {% if session.userdata('ID_TIPO_USUARIO') == 2 %}
        <p><a class="btn btn-primary" href="{{ base_url('index.php/ordem_servico/cadastrar') }}"><i class="fa fa-plus fa-fw"> </i> Cadastrar </a>
    {% endif %}
{% endblock %}
{% block content %}
    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example" style="cursor: pointer;">
        <thead>
            <tr style="background: url('{{ base_url('public/images/sprite.png') }}') repeat-x 0px 0px;">
            {% for header in ['Nº O.S','Solicitante', 'Categoria', 'Problema', 'Responsável', 'Andamento', 'Data Andamento'] %}
                <th>{{ header }}</th>
            {% endfor %}
            </tr>
        </thead>
        <tbody>
        {% for os in ordem_servico %}
            <tr class="{{ os.CLASSE }}">
                <td><a href="{{ base_url('index.php/ordem_servico/editar/') ~ os.ID_ORDEM_SERVICO }}" style="color: #333; text-decoration: none;">{{ os.ID_ORDEM_SERVICO }} </td>
                <td> {{ os.SOLICITANTE }} </td>
                <td> {{ os.CATEGORIA }} </td>
                <td> {{ os.PROBLEMA }} </td>
                <td> {{ os.RESPONSAVEL }} </td>
                <td><img src="{{ base_url('public/images/') ~ os.ID_STATUS }}.gif"/> {{ os.STATUS }}</td>
                <td>{{ os.DATA_ANDAMENTO }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}