{% block toolbar %}
    <p><a class="btn btn-primary" href="{{ base_url('index.php/usuario/cadastrar') }}"><i class="fa fa-plus fa-fw"></i> Cadastrar </a></p>
{% endblock %}
{% block content %}
    <table width="100%" class="table table-striped table-bordered" id="dataTables-example">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome Completo</th>
                <th>Setor</th>
                <th>Ramal</th>
                <th>Login</th>
            </tr>
        </thead>
        <tbody>
        {% for us in usuario %}
            <tr>
                <td>{{ us.ID_USUARIO }}</td>
                <td>{{ us.NOME_COMPLETO }}</td>
                <td>{{ us.SETOR }}</td>
                <td>{{ us.RAMAL }}</td>
                <td>{{ us.LOGIN }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}